<%- include("../../partials/header.ejs") %>
<%- include("../../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        <% result.articles.rows.forEach(article => { %> 
            <div class="card  mt-4">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
        <%})%>

        <div class="row">
            <div class="col col-12 text-right">
                <% if(result.page > 2) {%>
                <a href="/articles/page/<%= result.page - 1 %>"> <<< Prev</a>
                <% } else if(result.page == 2 ) {%>
                    <a href="/"> <<< Prev</a>
                <% }%>

                <% if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
                <hr>
            </div>
        </div>
        <hr>

    </div>
</body>
